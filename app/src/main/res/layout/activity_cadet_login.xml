<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/a2"
    android:layout_height="match_parent"
    tools:context=".auth.cadet_login">

    <ProgressBar
        android:id="@+id/progress_bar_login"
        android:visibility="gone"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/head"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="59dp"
        android:text="@string/a1"
        android:textAlignment="center"
        android:textColor="@color/colorwhite"
        android:textSize="30sp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="110dp"
        android:gravity="center"
        android:text="Cadet Login"
        android:textColor="@color/colorblack"
        android:textSize="28sp"
        android:textFontWeight="100" />

    <EditText
        android:id="@+id/cadet_username"
        android:layout_width="281dp"
        android:layout_height="45dp"
        android:layout_below="@id/head"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="185dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/top_grad"
        android:drawableLeft="@drawable/ic_account"
        android:drawablePadding="14dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/colorblack"
        android:textColorHint="@color/colorblack" />

    <EditText
        android:id="@+id/cadet_passward"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cadet_username"
        android:layout_alignStart="@+id/cadet_username"
        android:layout_alignEnd="@+id/cadet_username"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/top_grad"
        android:drawableLeft="@drawable/ic_password"
        android:hint="Passwaord"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/colorblack"
        android:textColorHint="@color/colorblack" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="792dp"
        android:layout_toStartOf="@+id/head"
        android:src="@drawable/logo"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/fgtpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cadet_passward"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="-34dp"
        android:clickable="false"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="16sp"
        android:text="Forgot password"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="italic"
        android:typeface="normal"
        android:visibility="visible"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cadet_loginbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cadet_passward"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_marginTop="48dp"
        android:background="@drawable/custome_button"
        android:text="LOGIN" />

    <TextView
        android:id="@+id/register1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cadet_loginbt"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="-47dp"
        android:layout_toStartOf="@+id/register2"
        android:text="Dont have an account ?"
        android:textColor="@color/colorblack" />

    <TextView
        android:id="@+id/register2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cadet_loginbt"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="27dp"
        android:layout_marginEnd="118dp"
        android:text="Register"
        android:onClick="register_switch"
        android:textColor="@color/colorred" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/swh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custome_button"
        android:textColor="@color/white"
        android:layout_below="@+id/cadet_loginbt"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="67dp"
        android:layout_marginRight="20dp"
        android:text="HOME / Switch Login" />
</RelativeLayout>