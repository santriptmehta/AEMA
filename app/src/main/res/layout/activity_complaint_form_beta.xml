<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.complaint_form_beta">

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:indeterminateDrawable="@drawable/progress_icon"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.305"></ProgressBar>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/curve_rectangle"
        android:orientation="vertical"
        android:padding="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/logo" />
        <TextView
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AEMA Issue Form"/>

    </LinearLayout>

    <TextView
        android:id="@+id/cauting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        android:textColor="@color/colorred"
        android:text="Fill the form.  *select one issue at a time*"/>


    <LinearLayout
        android:id="@+id/checkBoxes"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cauting">


        <CheckBox
            android:id="@+id/plum_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/top_grad"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="28dp"
            android:textColor="@color/top_grad"
            android:text="Plumbing" />

        <CheckBox
            android:id="@+id/Elec_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/top_grad"
            android:layout_marginTop="7dp"
            android:textColor="@color/top_grad"
            android:layout_marginLeft="20dp"
            android:text="Electrical" />

        <CheckBox
            android:id="@+id/maintain_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/top_grad"
            android:layout_marginTop="7dp"
            android:textColor="@color/top_grad"
            android:layout_marginLeft="20dp"
            android:text="Maintainance" />
    </LinearLayout>

    <EditText
        android:id="@+id/issuerDescribe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines ="4"
        android:maxLength ="2000"
        android:backgroundTint="@color/top_grad"
        android:ems="10"
        android:hint="Describe Your Issue *Optional"
        android:textColor="@color/black"
        android:textColorHint="@color/top_grad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/issuerDefect" />

    <EditText
        android:id="@+id/issuerDefect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/top_grad"
        android:ems="10"
        android:hint="Defect"
        android:inputType="textShortMessage"
        android:textColor="@color/black"
        android:textColorHint="@color/top_grad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/issuerLocation" />

    <EditText
        android:id="@+id/issuerLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/top_grad"
        android:ems="10"
        android:hint="Issue Location"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/top_grad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/issuerHostelNo" />

    <EditText
        android:id="@+id/issuerRollNo"
        android:layout_width="145dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/top_grad"
        android:ems="10"
        android:hint="Roll No"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="@color/top_grad"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxes" />

    <EditText
        android:id="@+id/issuerHostelNo"
        android:layout_width="145dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/top_grad"
        android:ems="10"
        android:hint="Hostel No"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="@color/top_grad"
        app:layout_constraintBottom_toBottomOf="@+id/issuerRollNo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.925"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/issuerRollNo"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/issueSubmitButton"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/curve_rectangle"
        android:elevation="5dp"
        android:text="Submit"
        android:textColor="@color/white"
        android:textColorHint="@color/top_grad"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/issuerDescribe" />

</androidx.constraintlayout.widget.ConstraintLayout>